    <RelativeLayout
        android:layout_marginTop="@dimen/size5"
        android:id="@+id/msgBody"
        android:background="@drawable/rectagular_bg_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintRight_toLeftOf="@id/imageView"
        app:layout_constraintVertical_bias="0.1"
       >
        <TextView
            android:id="@+id/student"
            android:text="Student"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginLeft="@dimen/size5"
            android:layout_marginTop="@dimen/size5"
            android:textSize="@dimen/text10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

      <LinearLayout
          android:layout_below="@+id/student"
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

          <TextView
              android:id="@+id/student_msg_body"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/student"
              app:autoSizeTextType="uniform"
              android:layout_gravity="center_vertical"
              app:autoSizeStepGranularity="1sp"
              android:maxWidth="@dimen/size200"
              android:padding="@dimen/size5"
              android:text="te"
              android:textColor="#000" />

          <TextView
              android:layout_gravity="bottom"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="@dimen/size5"
              android:layout_marginBottom="@dimen/size2"
              android:fontFamily="@font/open_sans"
              android:text="12:09:90"
              android:textSize="@dimen/text8" />

      </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/size18"
        android:layout_height="@dimen/size17"
        android:src="@drawable/arrow_bg1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/msgBody" />


